<div class="container">
  <div class="btn">
    <%= link_to 'Ma ville', city_pulses_path%>
  </div>
  <div class="title">
    <h1>Envoi ton Pulse !</h1>
  </div>

  <div class="form">
  <%= simple_form_for([@city, @pulse]) do |f| %>
    <%= f.input :problem, label: "C'est quoi ton probème ?" %>
    <%= f.input :solution, label: "Tu proposes quoi ?" %>
    <%= f.input :address,
        input_html: { data: { geocoder_target: "address" } },
        wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } },
        label: "Balance une adresse !" %>
    <%= f.input :title, label: "Donne moi un titre fort !" %>
    <%# f.input :photos, as:file %>
    <%= f.association :categories, include_hidden: false, label: "Dernière étape : Catégorise moi !" %>
    <%= f.submit%>
  <% end %>
  </div>
</div>
