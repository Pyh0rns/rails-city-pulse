
<%# ================= GEOCODER ================= %>

<%# ================= SEARCHBAR ================= %>

<%= form_tag city_pulses_path(current_user.city.id), method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Trouve un Pulse ou un utilisateur"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


<%# ================= CARDS ================= %>
<div class='card-container row'>
  <% @pulses.each do |pulse| %>
    <div class="card col mt-5 mx-5">
      <img src= '<%= pulse.photo_url%>'/>
      <div class="card-infos d-flex">
        <div>
          <h2><%= pulse.title %></h2>
          <p> <%= pulse.problem %></p>
        </div>
        <h2 class="card-votes">72 votes</h2>
        <%= link_to 'like', pulse_favorites_path(pulse), method: :post %>
        <%# <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> %>
      </div>
    </div>
  <% end %>
</div>
