  <div class="container">
    <div class="box-pulse-show">
      <div class="pulse-card-why">
        <img class="avatar-large-profile" src="<%= @pulse.user.photo_url %>" alt="">
        <div class="pt-3 inner-pulse-card">
          <h2 class="ms-5">Mon probleme </h2>
          <p><%= @pulse.problem %></p>
        </div>
      </div>
      <div class="pulse-card-why selected">
        <div class="p-3">
          <h2>Ma Solution</h2>
          <p><%= @pulse.solution %></p>
        </div>
      </div>
      <div style="margin-left:350px;">
        <button class="card__button"><i class="fas fa-heart"></i></button>
        <p class="ms-5">Like !</p>
      </div>
    </div>
  </div>
