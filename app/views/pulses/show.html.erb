  <%= link_to city_pulses_path(@pulse.city), id:"button-back" do %>
    <p><i class="fas fa-arrow-left ms-5 mb-3"> </i> Ta ville</p>
  <% end %>

<div class="container">

  <%# PROGRESS STEP BAR %>

  <ul class="steps">
    <li class="step step-success">
      <div class="step-content">
        <span class="step-circle"><i class="fas fa-lightbulb"></i></span>
        <span class="step-text">Postée</span>
      </div>
    </li>
    <li class="step step-success">
      <div class="step-content">
        <span class="step-circle"><i class="fas fa-heart"></i></span>
        <span class="step-text">Vote</span>
      </div>
    </li>
    <li class="step step-active">
      <div class="step-content">
        <span class="step-circle"><i class="fas fa-check"></i></span>
        <span class="step-text">Validée</span>
      </div>
    </li>
    <li class="step">
      <div class="step-content">
        <span class="step-circle"><i class="fas fa-thumbs-up"></i></span>
        <span class="step-text">Réalisée</span>
      </div>
    </li>
  </ul>

      <%# div pulses title%>

    <h1 class=" m-3 title-head"><%= @pulse.title %></h1>
