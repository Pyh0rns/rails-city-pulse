      <h1><%= current_user.nickname %></h1>
      <h2>Ville: <%= current_user.city.name %></h2>
      <h2>Grade: <%= current_user.grade %></h2>
      <h2>XP: <%= current_user.xp %></h2>
    </div>

  <%# 4 div a droite avec nom thématiques et bio %>
